<div id="stage" class="lunch" style="position:relative">

    <%- partial('elements/menu_header', { saleDate : saleDate }); %>
    <div class="center">
        <span class="color_red">特定の日時確認</span>
        <div class="buttonL maT10 maB10 pa0">
            <form action="/admin/confirm" method="GET" name="confirm2" accept-charset="utf-8">
		        <input type="text" name="targetDatetime" value="<%= dateformat(saleDate, 'yyyy-m-dd') %>">
            </form>
        </div>
        <a href="javascript:void(0)" onclick="document.confirm2.submit();return false;" class="buttonM next_button maB10 maB10" style="display:inline-block">決定</a>
    </div>
    <ul class="lunch_list_wrapper">
	    <% _.each(lunchBoxList, function(lunchBox){ %>
			<li class="lunch_menu_layout">
	            <form action="/admin/delete" method="POST" name="delete<%= lunchBox.id %>" accept-charset="utf-8">
		            <div class="lunch_menu_image"><img src="<%= lunchBox.imagePath %>" alt="" width="100%;" height="100%;"></div>
		            <div class="text_layout_m maL0 size_ss">
		                <p class='lunch_menu_name'><%= lunchBox.name %></p><br>
		                <p><%= lunchBoxStoreMap[lunchBox.lunchBoxStoreId].name %></p><br>
		                <p>個数:<span class="font_color_orange"><%= lunchBox.amount %></span>個</p><br>
		                <p><span class="text_right"><%= lunchBox.price %>円</span></p>
		            </div>
			        <div class="buttonL pa0">
				        <input type="hidden" name="lunchBoxId" value="<%= lunchBox.id %>">
		        	</div>
		        	<%
		        		var imageName = lunchBox.imagePath.replace(/\/img\/01_thum\//g, "");
		        		imageName = imageName.replace(/\.jpg/g, "");
		        	%>
	                <p class='lunch_menu_name'>画像名：<%= imageName %></p><br>
					<input type="submit" name='delete<%= lunchBox.id %>' onclick="javascript:return confirm('削除します。よろしいでしょうか？');" value="削除する" class="buttonM dark_gray_button">
		        	<!-- <a href="javascript:void(0)" onclick="document.delete<%= lunchBox.id %>.submit();return false;" class="buttonM dark_gray_button center" style="display:inline-block">削除</a> -->
        	    </form>
	        </li>
	    <% }); %>
    </ul>
    <a href="/admin/upload" class="buttonM next_button maB10 maB10" style="display:inline-block">入稿へ</a>
</div>