<div id="stage" class="lunch" style="position:relative">
	<% if (userLunchBoxStore) { %>
	    <h1 class="lunch_title maB10"><%= dateformat(saleDate, 'yyyy年m月dd日') %>のメニュー</h1>
	    <% if (lunchBoxList.length > 0) { %>
		    <ul class="lunch_list_wrapper">
			    <% _.each(lunchBoxList, function(lunchBox){ %>
					<li class="lunch_menu_layout">
			            <div class="lunch_menu_image">
	    	        		<a href="/top/detail?id=<%= lunchBox.id %>">
			                	<img src="<%= lunchBox.imagePath %>" alt="" width="100%;" height="100%;">
	    	        		</a>
			            </div>
			            <div class="text_layout_m maL0 size_ss">
			                <p class='lunch_menu_name'><%= lunchBox.name %></p><br>
			                <p><%= lunchBoxStoreMap[lunchBox.lunchBoxStoreId].name %></p><br>
			                <p>残り:<span class="font_color_orange"><%= lunchBox.amount - lunchBox.currentRecevedAmount %></span>個</p><br>
			                <p><span class="text_right"><%= lunchBox.price %>円</span></p>
			            </div>
			        </li>
			    <% }); %>
		    </ul>
		    <div class="center">
	            <span class="color_red">販売ビルを選択して下さい</span>
		        <div class="buttonL maT10 maB10 pa0">
	                <form action="/top/select" method="POST" name="select" accept-charset="utf-8">
	                    <select name="lunchBoxStoreId">
							<% _.each(lunchBoxStoreMap, function(lunchBoxStore) { %>
								<% if(userLunchBoxStore.lunchBoxStoreId == lunchBoxStore.id) { %>
		                            <option value="<%= lunchBoxStore.id %>" selected><%= lunchBoxStore.name %></option>
								<% } else { %>
		                            <option value="<%= lunchBoxStore.id %>"><%= lunchBoxStore.name %></option>
								<% } %>	
							<% }); %>
	                    </select>
	                </form>
		        </div>
	            <a href="javascript:void(0)" onclick="document.select.submit();return false;" class="buttonM next_button maB10 maB10" style="display:inline-block">決定</a>
		    </div>
	    <% } else { %>
		    <img src="../img/99_lunch/logo_001.png" alt="" width="70%;" height="70%;">
		    <div class="center">
		        <p class="color_red size_ll">更新中...しばらくお待ち下さい</p>
		    </div>
		<% } %>
	<% } else { %>
	    <img src="../img/99_lunch/logo_001.png" alt="" width="70%;" height="70%;">
	    <div class="center">
            <span class="color_red">販売ビルを選択して下さい</span>
	        <div class="buttonL maT10 maB10 pa0">
                <form action="/top/select" method="POST" name="select" accept-charset="utf-8">
                    <select name="lunchBoxStoreId">
						<% _.each(lunchBoxStoreMap, function(lunchBoxStore) { %>
							<% if(userLunchBoxStore.lunchBoxStoreId == lunchBoxStore.id) { %>
	                            <option value="<%= lunchBoxStore.id %>" selected><%= lunchBoxStore.name %></option>
							<% } else { %>
	                            <option value="<%= lunchBoxStore.id %>"><%= lunchBoxStore.name %></option>
							<% } %>
						<% }); %>
                    </select>
                </form>
	        </div>
            <a href="javascript:void(0)" onclick="document.select.submit();return false;" class="buttonM next_button maB10 maB10" style="display:inline-block">決定</a>
	    </div>
	<% } %>
	<% include ../attention %>
    <a href="/announce %>" class="buttonL back_button maT10 maB10 size_ss">現在発生しているバグ・トラブルについて</a>

</div>